<div class="flex flex-col space-y-4 items-center">
    <img class="w-[48px] h-[48px]" src="@ImageSrc" alt="loading"/>
    <span class="text-xl text-center">@Text</span>
</div>

@code {

    [Parameter]
    public string ImageSrc { get; set; } = "images/spinner.svg";
    
    [Parameter]
    public string Text { get; set; } = "Loading...";

}